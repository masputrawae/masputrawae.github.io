[
  {{- $pages := where .Site.Pages "Kind" "page" -}}
  {{- $lastIndex := sub (len $pages) 1 -}}
  {{- range $index, $page := $pages -}}
  {
    "title": {{ $page.Title | jsonify }},
    "description": {{ or $page.Description $page.Summary | plainify | htmlUnescape | truncate 300 | jsonify }},
    "href": "{{ $page.RelPermalink }}",
    "tags": [
      {{- with $page.Params.tags -}}
        {{- range $i, $tag := . -}}
          {{- if $i }}, {{ end -}}
          {{- $tag | jsonify -}}
        {{- end -}}
      {{- end -}}
    ],
    "categories": [
      {{- with $page.Params.categories -}}
        {{- range $i, $category := . -}}
          {{- if $i }}, {{ end -}}
          {{- $category | jsonify -}}
        {{- end -}}
      {{- end -}}
    ],
    "date": "{{ $page.Date.Format "2006-01-02" }}",
    {{- with $page.Params.images }}
      {{- with index . 0 }}
    "image": "{{ . | relURL }}"
      {{- end }}
    {{- else }}
    "image": ""
    {{- end }}
  }{{ if ne $index $lastIndex }},{{ end }}
  {{- end -}}
]